@model GLJ.Models.Produto.PDProduto
@{
    ViewBag.Title = "Cadastro de Produto";
}
@section JavaScript
{
    <script src="@Url.Content("~/Scripts/jquery.selectboxes/jquery.selectboxes.js")" type="text/javascript"></script>
}
  <div class="divTituloPagina">
        <h3>
            Gestão de Loja - Cadastro de Produto</h3>
            </div>
@using (Ajax.BeginForm("Salvar", "Produto", new AjaxOptions()
{
    HttpMethod = "Post",
    OnSuccess = "success"
}, new { enctype = "multipart/form-data", @class = "uniForm" }
))
{
    @Html.ValidationSummary(true)
    <fieldset class="inlineLabels">  
        @Html.HiddenFor(m => m.Produto.Codigo)
        <div class="ctrlHolder">
            @Html.LabelFor(m => m.Produto.Fornecedor)
            @Html.DropDownListFor(m => m.Produto.CodigoFornecedor, TempData["Fornecedor"] as IEnumerable<SelectListItem>, "Selecione um Fornecedor", new { @class = "textInput" })
            <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Selecione um Fornecedor." alt="" />
            <p class="formHint">
                @Html.ValidationMessageFor(m => m.Produto.CodigoFornecedor)</p>
        </div>
        <div class="ctrlHolder">
            @Html.LabelFor(m => m.Produto.TipoProduto)
            @Html.DropDownListFor(m => m.Produto.CodigoTipoProduto, TempData["TipoProduto"] as IEnumerable<SelectListItem>, "Selecione um Tipo de Produto", new { @class = "textInput" })
            <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Selecione um Tipo de Produto." alt="" />
            <p class="formHint">
                @Html.ValidationMessageFor(m => m.Produto.CodigoFornecedor)</p>
        </div>
        <div class="ctrlHolder">
            @Html.LabelFor(m => m.Produto.Descricao)
            @Html.TextBoxFor(m => m.Produto.Descricao, new { @class = "textInput" })
            <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Informe o Nome do Produto." alt="" />
            <p class="formHint">
                @Html.ValidationMessageFor(m => m.Produto.Descricao)</p>
        </div>
        <div class="ctrlHolder">
            @Html.LabelFor(m => m.Produto.UnidadeMedida)
            @Html.DropDownListFor(m => m.Produto.UnidadeMedida, TempData["Unidade"] as IEnumerable<SelectListItem>, "Selecione uma Unidade de Medida", new { @class = "textInput", id = "cmbUnidadeMedida" })
            <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Selecione uma Unidade de Medida." alt="" />
            <p class="formHint">
                @Html.ValidationMessageFor(m => m.Produto.UnidadeMedida)</p>
        </div>
        <div class="ctrlHolder">
            @Html.LabelFor(m => m.Produto.QuantiadeEmbalagem)
            @Html.TextBoxFor(m => m.Produto.QuantiadeEmbalagem, new { @class = "textInput" })
            <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Informe a Quantidade de Embalagens." alt="" />
            <p class="formHint">
                @Html.ValidationMessageFor(m => m.Produto.QuantiadeEmbalagem)</p>
        </div>
        <div class="ctrlHolder">
            @Html.LabelFor(m => m.Produto.CodigoFornecedorProduto)
            @Html.TextBoxFor(m => m.Produto.CodigoFornecedorProduto, new { @class = "textInput" })
            <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Informe o Codigo do Produto gerado pelo Fornecedor." alt="" />
            <p class="formHint">
                @Html.ValidationMessageFor(m => m.Produto.CodigoFornecedorProduto)</p>
        </div>
        <div class="ctrlHolder">
            @Html.LabelFor(m => m.Produto.EstoqueMinimo)
            @Html.TextBoxFor(m => m.Produto.EstoqueMinimo, new { @class = "textInput" })
            <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Informe a quantidade Minima do produto no Estoque." alt="" />
            <p class="formHint">
                @Html.ValidationMessageFor(m => m.Produto.EstoqueMinimo)</p>
        </div>
        <div class="ctrlHolder">
            @Html.LabelFor(m => m.Produto.EstoqueMaximo)
            @Html.TextBoxFor(m => m.Produto.EstoqueMaximo, new { @class = "textInput" })
            <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Informe a quantidade Máxima do produto no Estoque." alt="" />
            <p class="formHint">
                @Html.ValidationMessageFor(m => m.Produto.EstoqueMaximo)</p>
        </div>
        <div class="ctrlHolder">
            @Html.LabelFor(m => m.Produto.Ativo)
            @Html.CheckBoxFor(m => m.Produto.Ativo, new { @class = "textInput" })
            <p class="formHint">
                @Html.ValidationMessageFor(m => m.Produto.Ativo)</p>
        </div>
        <div class="buttonHolder">
            <input type="submit" class="primaryAction" value="Salvar" />
            <div class="secondaryAction">
                @Html.ActionLink("Finaliza Cadastro", "ConsultarProduto")                
            </div>
        </div>
    </fieldset>
}
