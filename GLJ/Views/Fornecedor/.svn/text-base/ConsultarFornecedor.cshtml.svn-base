@{
    ViewBag.Title = "Consultar Fornecedor";
}
@using MVC.Controls
@using MVC.Controls.Grid
@model GLJ.Models.Fornecedor.PDFornecedor
@section JavaScript
{
    <script src="@Url.Content("~/Scripts/jquery.selectboxes/jquery.selectboxes.js")" type="text/javascript"></script>
}
<div class="divTituloPagina">
    <h3>@ViewBag.Title</h3>
</div>
<div id="buscaAvancada">
    <h3>
        <a href="#">Busca Avançada</a></h3>
    <div>
        @using (Html.BeginForm("BuscarFornecedor", "Fornecedor", FormMethod.Post, new { id = "formBuscarFornecedor", @class = "uniForm" }))
        {
            <fieldset class="inlineLabels">
                <div class="ctrlHolder">
                    @Html.LabelFor(m => m.FEFornecedor.Nome)
                    @Html.TextBoxFor(m => m.FEFornecedor.Nome, new { @class = "textInput" })
                    <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Informe o Nome Fantasia." alt="" />
                </div>
                <div class="ctrlHolder">
                    @Html.LabelFor(m => m.FEFornecedor.Cnpj)
                    @Html.TextBoxFor(m => m.FEFornecedor.Cnpj, new { @class = "textInput" })
                    <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Informe o CNPJ." alt="" />
                </div>
                @Html.Partial("_EstadoCidade", Model)
                @*//TODO:Acertar o Ativo*@ @*                <div class="ctrlHolder">
                    @Html.LabelFor(m => m.FEFornecedor.Ativo)
                    @Html.CheckBoxFor(m => m.FEFornecedor.Ativo, new { @class = "textInput" })
                    <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Informe o CNPJ." alt="" />
                </div>*@
                <div class="buttonHolder">
                    <input type="submit" class="primaryAction" value="Buscar" />
                    <input type="reset" value="Limpar" class="primaryAction" />
                </div>
            </fieldset>
        }
    </div>
</div>
<div id="grid">
    @Html.Grid(new GridControl()
        .SetName("FornecedorGrid")
        .SetPageSize(20)
        .SetIsAutoSize(true)
        .SetListUrl(Url.Content("~/Fornecedor/Buscar"))
        .SetHeight("'100%'")
        .UseColumns(GLJ.Models.Fornecedor.GridFornecedorModel.BEFornecedorColumns)
        .SetAdditionalAttributes(",ondblClickRow:doubleClick")
        .UpdateDefaultPager(pager =>
            pager
                .ShowAdd(false)
                .ShowDel(false)
                .ShowEdit(false)
                .ShowView(false)
                .ShowSearch(true, true)
        ))
</div>
<div class="buttonAction">
    <p>@Html.ActionLink("Cadastrar Novo Fornecedor", "CadastroFornecedor", null, new { @class = "primaryAction" })
    </p>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $("#buscaAvancada").accordion({ collapsible: true, active: -1 });

        //Setar o nome do controle de Cidade
        $('#cmbEstado').attr('name', 'FEFornecedor.UF');
        $('#cmbCidade').attr('name', 'FEFornecedor.CodigoCidade');

        //Submit Form
        //Salvar Informações do Formulario
        $("#formBuscarFornecedor").submit(function (e) {
            e.preventDefault();
            $.post($(this).attr("action"), $(this).serialize(), function (retorno) {
                $("#FornecedorGrid").jqGrid().trigger("reloadGrid")
            });
        });

    });
    function doubleClick(rowid, iRow, iCol, e) {
        window.open(url + "/Fornecedor/CadastroFornecedor/" + $("#FornecedorGrid").getRowData(rowid).Codigo, "_self");
    }  
</script>
