@using Onion.MVCHelpers;
@model GLJ.Models.Login.PDLogin
@{
    Layout = null;    
}
<html>
<head>
    <title>Gestão de Loja</title>
    <link href="@Url.Content("~/Content/login.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/uni-form.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/default.uni-form.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/form.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/uni-form-validation.jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tools.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/placeholder.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Util.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('form.uniForm').uniform({
                prevent_submit: false
            });
            $('#btnEsqueciSenha').click(function () {
                $.post(url + "/Login/EsqueciSenha/", $('#formLogin').serialize(), function (data) {
                    if (data.Success) {
                        alert("Sucesso");
                        //$('#gridUsuarioGrupo').jqGrid().trigger("reloadGrid");
                    }
                    else {
                        $('.error').html(data.Mensage);
                        $('.error').show();
                    }
                });
            });

            // initialize tooltip
            $(".ctrlHolder img[title]").tooltip({

                // tweak the position
                offset: [10, 2],

                // use the "slide" effect
                effect: 'slide'

                // add dynamic plugin with optional configuration for bottom edge
            }).dynamic({ bottom: { direction: 'down', bounce: true} });

            $('#msgs > div').live('click', function () {
                $(this).hide();
                RemoverMensagens($(this).attr('session'));
            });
        });
    </script>
</head>
<body>
    <div class="box login">
        <div class="divTituloPagina">
            <h3>
                Acesso - Gestão de Loja</h3>
        </div>
          <div id="msgs">
                @if (Session["msgError"] != null)
                {
                    <div class="error" session="msgError">@Html.ConvertReturnToHtml(Session["msgError"].ToString())</div>
                }
          </div>
        @using (Html.BeginForm("LogOn", "Login", FormMethod.Post, new { enctype = "multipart/form-data", @class = "uniForm", id = "formLogin" }
    ))
        {
            <fieldset class="inlineLabels">
                @Html.ValidationSummary(true)
                <div class="ctrlHolder">
                    @Html.LabelFor(m => m.Login.Login)
                    @Html.TextBoxFor(m => m.Login.Login, new { @class = "textInput", style = "width: 50% !important;height:25px", placeholder = Html.PlaceHolder(m => m.Login.Login) })
                    <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Informe o usuário(e-mail)." alt="" />
                    <p class="formHint">
                        @Html.ValidationMessageFor(m => m.Login.Login)</p>
                </div>
                <div class="ctrlHolder">
                    @Html.LabelFor(m => m.Login.Senha)
                    @Html.TextBoxFor(m => m.Login.Senha, new { @class = "textInput", placeholder = Html.PlaceHolder(m => m.Login.Senha) , type = "password", style = "width: 50%; !important;height:25px" })
                    <img src='@Url.Content("~/Content/img/info_tooltip.png")' title="Informe a senha." alt="" />
                    <p class="formHint">
                        @Html.ValidationMessageFor(m => m.Login.Senha)</p>
                </div>
            </fieldset>
        
       
            <div class="buttonHolder">
                <input type="button" class="primaryAction" value="Esqueci a senha" id="btnEsqueciSenha" />
                <input type="submit" class="primaryAction" value="Efetuar Login" />
            </div> 
        }
    </div>
</body>
</html>
