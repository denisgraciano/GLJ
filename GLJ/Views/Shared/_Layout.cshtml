@using GLJ.Models.Helpers;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/BreadCrumb.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/uni-form.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/default.uni-form.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/form.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/menu.css")" rel="stylesheet" type="text/css" />
    @RenderSection("CSS", required: false)
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript" />
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/uni-form-validation.jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/dateFormat.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tools.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/placeholder.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Util.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.meio.mask.js")" type="text/javascript"></script>
    @RenderSection("JavaScript", required: false)
    <!-- MVC.Controls -->
    @MVC.Controls.MVCControlsScriptManager.Instance.SetUseJqCustom(true, "1.8.2").RegisterScriptsAndStyles(Url.Content("~/Content/MVCControls/"), Url.Content("~/Scripts/MVCControls/"))
    <!-- End of MVC.Controls -->
    <script type="text/javascript">

        $(function () {
            $.fn.placeholder();

            $('form.uniForm').uniform({
                prevent_submit: true
            });

            $('div.uniForm').uniform({
                prevent_submit: false
            });

            // initialize tooltip
            $(".ctrlHolder img[title]").tooltip({

                // tweak the position
                offset: [10, 2],

                // use the "slide" effect
                effect: 'slide'

                // add dynamic plugin with optional configuration for bottom edge
            }).dynamic({ bottom: { direction: 'down', bounce: true} });

            $(":button[title]").tooltip();

            $(".hasDatepicker").addClass('textInputMenor');

        });

        $('#msgs > div').live('click', function () {
            $(this).hide();
            RemoverMensagens($(this).attr('session'));
        });
    </script>
</head>
<body>
    <div id="content">
        <div id="top">
            @Html.Partial("_LogOnInformation")
            <!-- Pesquisa que será efetuada para atalho de pedido !-->
             @Html.Partial("_PesquisaTopo")
        </div>
        <div id="logo">
            @Html.Partial("_LogoHeader")
        </div>
        @Html.Partial("_Menu")
        <div class="breadCrumbHolder module">@Html.Partial("_BreadCrumb")</div>
        <div id="main">
            <div id="msgs">
                @if (Session["msgError"] != null)
                {
                    <div class="error" session="msgError">@Html.ConvertReturnToHtml(Session["msgError"].ToString())</div>
                }
                @if (Session["msgSuccess"] != null)
                {
                    <div class="success" session="msgSuccess">@Html.ConvertReturnToHtml(Session["msgSuccess"].ToString())</div>
                }
                @if (Session["msgInfo"] != null)
                {
                    <div class="info" session="msgInfo">@Html.ConvertReturnToHtml(Session["msgInfo"].ToString())</div>
                }
                @if (Session["msgWarning"] != null)
                {
                    <div class="warning" session="msgWarning">@Html.ConvertReturnToHtml(Session["msgWarning"].ToString())</div>
                }
                <div class="error" session="msgError" style="display: none">
                </div>
                <div class="success" session="msgSuccess" style="display: none">
                </div>
                <div class="info" session="msgInfo" style="display: none">
                </div>
            </div>
           
                @RenderBody()
            
        </div>
        <div id="line">
        </div>
        <div id="footer">
            Desenvolvido por <a href="http://www.ddsistems.com.br">DDSistems</a>
        </div>
    </div>
</body>
</html>
